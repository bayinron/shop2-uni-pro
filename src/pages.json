{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
    "pages": [
        {
            "path": "pages/home/index",
            "style": {
                "navigationBarTitleText": "Home",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/sort/sort",
            "style": {
                "navigationBarTitleText": "类型",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/shop/shop",
            "style": {
                "navigationBarTitleText": "店铺",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/mine/mine",
            "style": {
                "navigationBarTitleText": "我的",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/login/login",
            "style": {
                "navigationBarTitleText": "登录",
                "navigationStyle": "custom"
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "Cloud Data Home",
        "navigationBarBackgroundColor": "#000",
        "backgroundColor": "#f3f4f8",
        "disableBounce": true,
        "app-plus": {
            "bounce": "none"
        }
    },
    "tabBar": {
        "color": "#000",
        "selectedColor": "#c61111",
        "backgroundColor": "#fff",
        "fontSize": "14px",
        "height": "60px",
        "list": [
            {
                "pagePath": "pages/home/index",
                "text": "Home",
                "iconPath": "static/tab/home.png",
                "selectedIconPath": "static/tab/homeHL.png"
            },
            {
                "pagePath": "pages/sort/sort",
                "text": "Sort",
                "iconPath": "static/tab/fl.png",
                "selectedIconPath": "static/tab/fl_a.png"
            },
            {
                "pagePath": "pages/shop/shop",
                "text": "Shop",
                "iconPath": "static/tab/dp.png",
                "selectedIconPath": "static/tab/dp_a.png"
            },
            {
                "pagePath": "pages/mine/mine",
                "text": "Mine",
                "iconPath": "static/tab/my.png",
                "selectedIconPath": "static/tab/my_a.png"
            }
        ]
    }
}